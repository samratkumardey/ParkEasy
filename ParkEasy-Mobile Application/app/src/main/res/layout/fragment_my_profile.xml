<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/colorPrimary"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="10dp"
            android:background="@drawable/rounded_edittext"
            android:textSize="30sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="My Profile"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#DAD7D4"
            android:textSize="30sp" />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#41CAB3" />
        <TextView
            android:id="@+id/txtUserName1"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textStyle="bold"
            android:textColor="#AFE3F8"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#DAD7D4"
            android:textAlignment="center"
            android:textSize="22sp" />
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#41CAB3" />
        <TextView
            android:id="@+id/txtAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="serif"
            android:textColor="#AFE3F8"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#DAD7D4"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="22sp" />
        <View
            android:id="@+id/divider3d"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#41CAB3" />
        <TextView
            android:id="@+id/txtphoneNumq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type"
            android:layout_gravity="center"
            android:textColor="#AFE3F8"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtphoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Reg. No"
            android:textColor="#DAD7D4"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="22sp" />
        <View
            android:id="@+id/divider3f"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#41CAB3" />
        <TextView
            android:id="@+id/txtMails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Reg. No"
            android:layout_gravity="center"
            android:textColor="#AFE3F8"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textColor="#DAD7D4"
            android:text="Phone Number"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="22sp" />
        <View
            android:id="@+id/divider3sdf"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="#41CAB3"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:id="@+id/txtMailsa"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textStyle="bold"
            android:background="@drawable/rounded_edittext"
            android:textColor="#AFE3F8"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="13dp" />
    </LinearLayout>


</ScrollView>